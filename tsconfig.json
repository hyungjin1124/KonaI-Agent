{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./config/*"],
      "@scripts/*": ["./scripts/*"],
      "@templates/*": ["./templates/*"]
    },
    "types": ["node"]
  },
  "include": [
    "scripts/**/*.ts",
    "config/**/*.ts",
    "templates/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "KonaI-Agent-Demo"
  ]
}
