{
  "$schema": "./screen-states.schema.json",
  "version": "2.0.0",
  "screens": [
    {
      "id": "SCR-001",
      "name": "로그인 화면",
      "nameEn": "Login Screen",
      "route": "/login",
      "component": "LoginView",
      "states": [
        {
          "stateId": "default",
          "stateName": "초기 상태",
          "description": "로그인 폼이 비어있는 초기 상태",
          "waitFor": "[data-testid='login-form']",
          "delay": 500
        },
        {
          "stateId": "filled",
          "stateName": "입력 완료 상태",
          "description": "이메일과 비밀번호가 입력된 상태",
          "waitFor": "[data-testid='login-form']",
          "interactions": [
            { "action": "type", "selector": "[data-testid='email-input']", "value": "admin@kona.com" },
            { "action": "type", "selector": "[data-testid='password-input']", "value": "password123" }
          ],
          "delay": 500
        },
        {
          "stateId": "error",
          "stateName": "로그인 오류 상태",
          "description": "빈 필드로 로그인 시도 후 오류 메시지 표시",
          "waitFor": "[data-testid='login-form']",
          "interactions": [
            { "action": "clear", "selector": "[data-testid='email-input']" },
            { "action": "clear", "selector": "[data-testid='password-input']" },
            { "action": "click", "selector": "[data-testid='login-button']" },
            { "action": "wait", "duration": 2000 }
          ],
          "waitForAfter": "[data-testid='error-message']",
          "delay": 500
        }
      ]
    },
    {
      "id": "SCR-002",
      "name": "대시보드",
      "nameEn": "Dashboard",
      "route": "/",
      "component": "ChatInterface",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "기본 대시보드",
          "description": "로그인 후 기본 대시보드 화면",
          "waitFor": "[data-testid='dashboard-container']",
          "delay": 1000
        },
        {
          "stateId": "with-notification",
          "stateName": "알림 표시 상태",
          "description": "알림 팝업이 표시된 상태",
          "waitFor": "[data-testid='dashboard-container']",
          "interactions": [
            { "action": "click", "selector": "[data-testid='notification-bell']" }
          ],
          "waitForAfter": "[data-testid='notification-popup']",
          "delay": 500
        },
        {
          "stateId": "profile-dropdown",
          "stateName": "프로필 드롭다운 열림",
          "description": "사용자 프로필 드롭다운이 열린 상태",
          "waitFor": "[data-testid='dashboard-container']",
          "interactions": [
            { "action": "click", "selector": "[data-testid='profile-button']" }
          ],
          "waitForAfter": "[data-testid='profile-dropdown']",
          "delay": 300
        }
      ]
    },
    {
      "id": "SCR-003",
      "name": "시나리오 분석",
      "nameEn": "Scenario Analysis",
      "route": "/agent/analysis",
      "component": "AgentChatView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "분석 화면 기본",
          "description": "시나리오 분석 화면 초기 상태",
          "waitFor": "[data-testid='analysis-view']",
          "delay": 1000
        },
        {
          "stateId": "analysis-complete",
          "stateName": "분석 완료",
          "description": "분석 결과가 표시된 상태",
          "injectState": {
            "showDashboard": true
          },
          "waitFor": "[data-testid='analysis-result']",
          "delay": 1500
        }
      ]
    },
    {
      "id": "SCR-004",
      "name": "라이브보드",
      "nameEn": "Liveboard",
      "route": "/liveboard",
      "component": "LiveboardView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "라이브보드 기본",
          "description": "위젯이 배치된 기본 라이브보드",
          "waitFor": "[data-testid='liveboard-container']",
          "delay": 2000
        },
        {
          "stateId": "widget-expanded",
          "stateName": "위젯 확장",
          "description": "특정 위젯이 확장된 상태",
          "waitFor": "[data-testid='liveboard-container']",
          "interactions": [
            { "action": "click", "selector": "[data-testid='widget-expand-revenue']" }
          ],
          "waitForAfter": "[data-testid='widget-modal']",
          "delay": 500
        }
      ]
    },
    {
      "id": "SCR-005",
      "name": "데이터 관리",
      "nameEn": "Data Management",
      "route": "/data",
      "component": "DataManagementView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "데이터 관리 기본",
          "description": "데이터 소스 목록이 표시된 상태",
          "waitFor": "[data-testid='data-management-view']",
          "delay": 1000
        }
      ]
    },
    {
      "id": "SCR-006",
      "name": "스킬 관리",
      "nameEn": "Skills Management",
      "route": "/settings/skills",
      "component": "SkillManagementView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "스킬 관리 기본",
          "description": "등록된 스킬 목록이 표시된 상태",
          "waitFor": "[data-testid='skills-management-view']",
          "delay": 1000
        },
        {
          "stateId": "upload-modal",
          "stateName": "스킬 업로드 모달",
          "description": "새 스킬 업로드 모달이 열린 상태",
          "waitFor": "[data-testid='skills-management-view']",
          "interactions": [
            { "action": "click", "selector": "[data-testid='add-skill-button']" }
          ],
          "waitForAfter": "[data-testid='skill-upload-modal']",
          "delay": 500
        }
      ]
    },
    {
      "id": "SCR-007",
      "name": "관리자 설정",
      "nameEn": "Admin Settings",
      "route": "/admin",
      "component": "AdminView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "관리자 설정 기본",
          "description": "시스템 설정 화면",
          "waitFor": "[data-testid='admin-view']",
          "delay": 1000
        }
      ]
    },
    {
      "id": "SCR-008",
      "name": "채팅 히스토리",
      "nameEn": "Chat History",
      "route": "/history",
      "component": "ChatHistoryView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "채팅 히스토리 기본",
          "description": "이전 대화 목록이 표시된 상태",
          "waitFor": "[data-testid='chat-history-view']",
          "delay": 1000
        }
      ]
    },
    {
      "id": "SCR-009",
      "name": "PPT 생성",
      "nameEn": "PPT Generation",
      "route": "/agent/ppt",
      "component": "AgentChatView",
      "requiresAuth": true,
      "states": [
        {
          "stateId": "default",
          "stateName": "PPT 생성 기본",
          "description": "PPT 생성 채팅 인터페이스",
          "waitFor": "[data-testid='ppt-chat-interface']",
          "delay": 1000
        },
        {
          "stateId": "generating",
          "stateName": "PPT 생성 중",
          "description": "PPT가 생성되고 있는 상태",
          "injectState": {
            "isGenerating": true
          },
          "waitFor": "[data-testid='ppt-generating-indicator']",
          "delay": 500
        }
      ]
    }
  ],
  "defaultAuth": {
    "email": "admin@kona.com",
    "password": "password123"
  },
  "waitDefaults": {
    "networkIdle": 2000,
    "afterInteraction": 500,
    "afterNavigation": 1000
  }
}
