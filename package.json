{
  "name": "kona-agent-specs",
  "version": "1.0.0",
  "description": "KonaI Agent specifications and demo management system",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "capture": "tsx scripts/capture/index.ts",
    "capture:all": "tsx scripts/capture/index.ts --scenarios all",
    "capture:screen": "tsx scripts/capture/index.ts --scenario",
    "generate": "tsx scripts/generate/index.ts",
    "generate:spec": "tsx scripts/generate/index.ts --type spec",
    "generate:guide": "tsx scripts/generate/index.ts --type guide",
    "pipeline": "tsx scripts/pipeline.ts",
    "pipeline:full": "tsx scripts/workflows/pipeline-orchestrator.ts --mode full",
    "pipeline:quick": "tsx scripts/workflows/pipeline-orchestrator.ts --mode quick",
    "workflow:screen": "tsx scripts/workflows/screen-workflow.ts",
    "workflow:spec": "tsx scripts/core/spec-builder.ts",
    "validate:a11y": "tsx scripts/validate/accessibility.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:capture": "vitest tests/capture",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint scripts/ --ext .ts"
  },
  "keywords": [
    "kona",
    "agent",
    "specs",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "puppeteer": "^23.11.1",
    "docx": "^9.0.3",
    "dotenv": "^16.4.7",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "simple-git": "^3.22.0",
    "chokidar": "^3.5.3",
    "inquirer": "^9.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.454.0",
    "react-grid-layout": "^1.4.4",
    "reactflow": "^11.10.1",
    "recharts": "^2.12.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/lodash": "^4.17.0",
    "@vitejs/plugin-react": "^5.0.0",
    "vite": "^6.2.0",
    "tsx": "^4.7.0",
    "typescript": "~5.8.2",
    "vitest": "^2.0.0",
    "@axe-core/puppeteer": "^4.9.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  }
}
