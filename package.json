{
  "name": "kona-agent-specs",
  "version": "1.0.0",
  "description": "KonaI Agent specifications and demo management system",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev --prefix KonaI-Agent-Demo",
    "build": "npm run build --prefix KonaI-Agent-Demo",
    "preview": "npm run preview --prefix KonaI-Agent-Demo",
    "capture": "tsx scripts/capture/index.ts",
    "capture:all": "tsx scripts/capture/index.ts --scenarios all",
    "capture:screen": "tsx scripts/capture/index.ts --scenario",
    "generate": "tsx scripts/generate/index.ts",
    "generate:spec": "tsx scripts/generate/index.ts --type spec",
    "generate:guide": "tsx scripts/generate/index.ts --type guide",
    "pipeline": "tsx scripts/pipeline.ts",
    "pipeline:full": "tsx scripts/pipeline.ts --full",
    "validate:a11y": "tsx scripts/validate/accessibility.ts",
    "test": "vitest",
    "test:capture": "vitest --testPathPattern=capture",
    "lint": "eslint scripts/ --ext .ts"
  },
  "keywords": [
    "kona",
    "agent",
    "specs",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "puppeteer": "^23.11.1",
    "docx": "^9.0.3",
    "dotenv": "^16.4.7",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "tsx": "^4.7.0",
    "typescript": "~5.8.2",
    "vitest": "^2.0.0",
    "@axe-core/puppeteer": "^4.9.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  }
}
