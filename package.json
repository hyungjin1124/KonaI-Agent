{
  "name": "kona-agent-specs",
  "version": "1.0.0",
  "description": "KonaI Agent specifications and demo management system",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "capture": "tsx scripts/capture/index.ts",
    "capture:all": "tsx scripts/capture/index.ts --scenarios all",
    "capture:screen": "tsx scripts/capture/index.ts --scenario",
    "generate": "tsx scripts/generate/index.ts",
    "generate:spec": "tsx scripts/generate/index.ts --type spec",
    "generate:guide": "tsx scripts/generate/index.ts --type guide",
    "pipeline": "tsx scripts/pipeline.ts",
    "pipeline:full": "tsx scripts/workflows/pipeline-orchestrator.ts --mode full",
    "pipeline:quick": "tsx scripts/workflows/pipeline-orchestrator.ts --mode quick",
    "workflow:screen": "tsx scripts/workflows/screen-workflow.ts",
    "workflow:spec": "tsx scripts/core/spec-builder.ts",
    "validate:a11y": "tsx scripts/validate/accessibility.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:capture": "vitest tests/capture",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint scripts/ --ext .ts"
  },
  "keywords": [
    "kona",
    "agent",
    "specs",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.0.0",
    "docx": "^9.0.3",
    "dotenv": "^16.4.7",
    "inquirer": "^9.2.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.454.0",
    "next": "^15.5.12",
    "next-themes": "^0.4.6",
    "ora": "^8.0.0",
    "puppeteer": "^23.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.4.4",
    "react-markdown": "^10.1.0",
    "reactflow": "^11.10.1",
    "recharts": "^2.12.3",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.22.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.9.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/lodash": "^4.17.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.56.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.7.0",
    "typescript": "~5.8.2",
    "vitest": "^2.0.0"
  }
}
